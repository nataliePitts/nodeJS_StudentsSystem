doctype html
html(dir="rtl" lang="he") 
   head
      title עדכון נתונים
      meta(charset='utf-8')
      style
         include ../public/style.css  
      script.
         console.log('error','#{error}');
         ////Function that listens for error events >>
         window.addEventListener('load', () => {
            setTimeout(() => {
               if('#{error}'){
                  alert('#{error}');
               }
            })
         });

   body
      div.div1
         h2 מערכת עדכון נתונים:
         form(action='/student/update/'+id method="post") 
            label(for="id") מספר ת.ז:
               input(type="text" id="id" name="id" value=id readonly)
            br
            br
            label(for="name") שם מלא:
               input(type="text" id="name" name="name" value=name readonly)
            br
            br
            label(for="city") עיר:
               input(type="text" id="city" name="city" value=city readonly)
            br
            br
            label(for="toar") תואר:
               input(id="toar" name="toar" size="3" value=toar readonly)

            br
            br
            hr
            h3 רשימת קורסים:
            table  
               tr
                  th מספר קורס
                  nbsp
                  th ציון
                  tr
                     each course in courses
                        td #{course.courseid} 
                        td #{course.grade}
                        tr

            hr
            h3 הוספת קורס חדש:
            label(for="courseid") מספר קורס:
               input(type="text" id="courseid" name="courseid" value=courseid required autofocus)
            br
            br
            label(for="grade") ציון:
               input(type="number" id="grade" name="grade" value=grade required)
            br
            br
            button(type="submit") הוסף קורס
            br
            br
            a(href="http://localhost:8080/student") חזרה לתפריט הראשי